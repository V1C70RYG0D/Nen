{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "exactOptionalPropertyTypes": false,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@/types/*": ["types/*"],
      "@/services/*": ["services/*"],
      "@/models/*": ["models/*"],
      "@/utils/*": ["utils/*"]
    }
  },
  "include": [
    "src/services/UltraPerformanceLoadTestingServiceV2.ts",
    "src/services/DatabaseService.ts",
    "src/utils/logger.ts",
    "src/types/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "src/__tests__",
    "**/*.test.ts"
  ]
}
