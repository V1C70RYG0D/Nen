# Nen Platform Frontend Environment Configuration
# Copy this to .env.local and configure for your environment

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3005
NEXT_PUBLIC_WS_URL=ws://localhost:3001
NEXT_PUBLIC_API_TIMEOUT=10000
NEXT_PUBLIC_API_RETRY_ATTEMPTS=3
NEXT_PUBLIC_API_RETRY_DELAY=1000

# Solana Configuration (used by production on-chain client)
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.devnet.solana.com
# Set to your deployed betting program ID on devnet
NEXT_PUBLIC_BETTING_PROGRAM_ID=
NEXT_PUBLIC_NEN_MARKETPLACE_PROGRAM_ID=8FbcrTGS9wQCyC99h5jbHx2bzZjYfkGERSMCjmYBDisH
NEXT_PUBLIC_TREASURY_PUBLIC_KEY=
NEXT_PUBLIC_AGENT_MINT_FEE_LAMPORTS=
NEXT_PUBLIC_AGENT_NFT_SYMBOL=NENAI

# Backward-compat (legacy vars used in some older code paths)
NEXT_PUBLIC_RPC_URL=https://api.devnet.solana.com
NEXT_PUBLIC_PROGRAM_ID=

# MagicBlock Configuration
NEXT_PUBLIC_MAGICBLOCK_RPC=https://api.magicblock.app/v1/rpc
NEXT_PUBLIC_MAGICBLOCK_WS=wss://api.magicblock.app/v1/ws

# Application Configuration
NEXT_PUBLIC_APP_NAME=Nen Platform
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_ENVIRONMENT=development

# Feature Flags
NEXT_PUBLIC_ENABLE_WEBSOCKETS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG_MODE=true

# Performance Configuration
NEXT_PUBLIC_MAX_CONCURRENT_REQUESTS=10
NEXT_PUBLIC_CACHE_TTL=300000
NEXT_PUBLIC_WEBSOCKET_HEARTBEAT_INTERVAL=30000

