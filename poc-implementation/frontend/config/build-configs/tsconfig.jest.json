{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "types": ["jest", "@testing-library/jest-dom", "jest-axe"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "types/jest.d.ts"
  ],
  "exclude": [
    "node_modules",
    "cypress/**/*",
    "playwright/**/*",
    "dist",
    ".next",
    "coverage"
  ]
}
